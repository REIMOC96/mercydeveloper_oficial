@model MercDevs_ej2.Models.Diagnosticosolucion

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Agregar Diagnostico / Solucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DescripcionDiagnostico" class="control-label">Descripcion de Diagnostico</label>
                <input asp-for="DescripcionDiagnostico" class="form-control" />
                <span asp-validation-for="DescripcionDiagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionSolucion" class="control-label">Descripcion de Diagnostico</label>
                <input asp-for="DescripcionSolucion" class="form-control" />
                <span asp-validation-for="DescripcionSolucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFichaTecnica" class="control-label">Id Ficha Tecnica</label>
                <select asp-for="IdFichaTecnica" class ="form-control" asp-items="ViewBag.IdFichaTecnica"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index"><button class="btn btn-secondary">volver a la lista</button></a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>

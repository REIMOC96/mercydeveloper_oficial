@model MercDevs_ej2.Models.Diagnosticosolucion

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Diagnostico / Solucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDiagnosticoSolucion" />
            <div class="form-group">
                    <label asp-for="DescripcionDiagnostico" class="control-label">
                        Descripcion 
                    </label>
                <input asp-for="DescripcionDiagnostico" class="form-control" />
                <span asp-validation-for="DescripcionDiagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="DescripcionSolucion" class="control-label">Diagnostico</label>
                <input asp-for="DescripcionSolucion" class="form-control" />
                <span asp-validation-for="DescripcionSolucion" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdFichaTecnica" />
            <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-warning" />
                </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index"><button class="btn btn-secondary">volver a la lista</button></a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>

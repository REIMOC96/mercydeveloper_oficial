@model List<MercDevs_ej2.Models.Recepcionequipo>
@using System.Security.Claims;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">


        @if (Model != null && Model.Any())
        {
            <h2 class="mt-4">Recepciones de Equipos</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID Cliente</th>
                        <th>ID Servicio</th>
                        <th>Fecha</th>
                        <th>Tipo de PC</th>
                        <th>Accesorio</th>
                        <th>Marca PC</th>
                        <th>Modelo PC</th>
                        <th>Número de Serie</th>
                        <th>RAM</th>
                        <th>Almacenamiento</th>
                        <th>GPU</th>
                        <th>Gráfico</th>
                        <th>Estado</th>
                        <th>Completar Recepcion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipo in Model)
                    {
                        <tr>
                            <td>@equipo.IdCliente</td>
                            <td>@equipo.IdServicio</td>
                            <td>@equipo.Fecha</td>
                            <td>@equipo.TipoPc</td>
                            <td>@equipo.Accesorio</td>
                            <td>@equipo.MarcaPc</td>
                            <td>@equipo.ModeloPc</td>
                            <td>@equipo.Nserie</td>
                            <td>@equipo.CapacidadRam</td>
                            <td>@equipo.CapacidadAlmacenamiento</td>
                            <td>@equipo.TipoGpu</td>
                            <td>@equipo.Grafico</td>
                            <td>@equipo.Estado</td>
                            <td>
                            <a asp-controller="Recepcionequipoes" asp-action="Completado" asp-route-id="@equipo.Id"><Button class="btn btn-warning">completado</Button></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
        <h2>No hay recepciones de equipos para mostrar 😔</h2>
        }
</div>
